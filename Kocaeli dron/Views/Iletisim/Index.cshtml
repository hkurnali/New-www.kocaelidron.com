                    <h3 class="w3l-title-main">Bana Mesaj Gönderebilirsiniz?</h3>
                </div>
                <div class="d-grid cont-main-top">
                   
                    <!-- contact form -->
                    <div class="contacts12-main">
                        <form action="/Iletisim/Index" method="post" class="main-input">
                            <div class="alert " id="sendmessagez">@ViewBag.uyari</div>
                            <div class="top-inputs d-grid">
                                <input type="text" placeholder="Adınız soyadız" name="Adsoyad" id="w3lName" required="">
                                <input type="email" name="Mail" placeholder="Mail" id="w3lSender" required="">
                            </div>
                            <input type="text" placeholder="Telefon" name="Telefon" id="w3lName" required="">
                            <textarea placeholder="Mesaj" name="Mesaj" id="w3lMessage" required=""></textarea>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary btn-style">Gönder</button>
                            </div>
                        </form>
                    </div>
                    <!-- //contact form -->
                </div>
            </div>
            <!-- map -->
            <div class="map mt-5">
