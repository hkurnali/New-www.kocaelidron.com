<!-- contact -->
<section class="w3l-contacts-12">
    <div class="contact-top pt-5">
        <div class="container py-lg-5 py-2">
            <div class="title-heading-w3 mx-auto text-center mb-sm-5 mb-4">
                <h3 class="w3l-title-main">Mesaj Bölümü</h3>
            </div>
            <div class="d-grid cont-main-top">
                <!-- contact form -->
                <div class="contacts12-main">
                    <form action="https://formspree.io/f/xdovpeqv" method="post" class="main-input">
                    <div class="top-inputs d-grid">
                        <input type="text" placeholder="İsim" name="w3lName" id="w3lName" required="">
                        <input type="email" name="email" placeholder="Mail Adresiniz" id="w3lSender" required="">
                    </div>
                    <input type="text" placeholder="Telefon" name="w3lName" id="w3lName" required="">
                    <textarea placeholder="Mesajınızı Yazın" name="w3lMessage" id="w3lMessage" required=""></textarea>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary btn-style">Gönder</button>
                    </div>
                    </form>
                </div>
                <!-- //contact form -->
            </div>
        </div>
        <!-- map -->
        <div class="map mt-5">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d756.2157353974962!2d29.891234599634966!3d40.699016097693296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1681124897876!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <!-- //map -->
    </div>
</section>
